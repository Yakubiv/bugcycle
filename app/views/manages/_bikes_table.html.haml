%table.table
  %thead
    %th
    %th Name
    %th Description
    %th Suggests
    %th
  %tbody
    - bicycles.each do |bike|
      %tr
        %td= image_tag bike.image, width: 30
        %td.text-bold= link_to bike.name, bike
        %td= truncate bike.description, length: 150
        %td= bike.suggestions.pending.count
        %th
          = link_to edit_bicycle_path(bike) do
            %i.fa.fa-pencil
          = link_to bicycle_path(bike), method: :delete, data: {confirm: 'Are you sure?'} do
            %i.fa.fa-trash
